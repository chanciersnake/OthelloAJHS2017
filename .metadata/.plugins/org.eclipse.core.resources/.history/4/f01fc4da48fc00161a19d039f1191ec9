import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;

public class BeginingGameScreen extends JFrame implements ActionListener {

	//JLabel
	JLabel Othello = new JLabel("Othello");
	
	
	//JPanel
	JPanel panel = new JPanel();
	
	//Buttons
	JButton PlayOthello = new JButton("Play Othello");
	JButton Exit = new JButton("Exit");
	
	//set Font of text
    Font Cool = new Font("Zapfino", Font.ITALIC,100);
    Font ok = new Font("Rockwell", Font.BOLD,20);

	public BeginingGameScreen() {
		
		
	    //JFrame layout
		this.setSize(500, 500);
	    this.setVisible(true);
	    
		
		setDefaultCloseOperation( JFrame.EXIT_ON_CLOSE );

	    //JPanel layout
	    panel.setLayout(null);

	    // Positioning
	    //						x	y	width	height
	    PlayOthello.setBounds(175, 250, 150, 50);
	    Exit.setBounds(175, 350, 350, 50);
	    Othello.setBounds(100, 50, 500, 200);
	    
	    //Adding to JFrame
	    panel.add(Othello);
	    panel.add(PlayOthello);
	    panel.add(Exit);
	    this.add(panel);
	    
	    //setting Font
	    PlayOthello.setFont(ok);
	    Exit.setFont(ok);
	    Othello.setFont(Cool);
	   

	}
	

	@Override
	public void actionPerformed(ActionEvent arg0) {
		
			
			
		}
	}
