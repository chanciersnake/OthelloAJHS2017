	//JPanel
	JPanel panel = new JPanel();
	
	//Buttons
	JButton PlayOthello = new JButton("Play Othello");
	JButton Exit = new JButton("Exit");
	
	//set Font of text
    Font Cool = new Font("Zapfino", Font.ITALIC,100);
    Font ok = new Font("Rockwell", Font.BOLD,20);

	public BeginingGameScreen() {
		//img = Toolkit.getDefaultToolkit().createImage("C:/Users/Vincent Kelly/Pictures/gifgif.gif");
		
		
		int x = 500;
		int y = 550;
	
		
		
		
	    //JFrame layout
		this.setSize(x, y);
	    this.setVisible(true);
	    this.setResizable(false);
	    this.setTitle("Othello");
	    
	    //this.setBackground(Color.);
		
		setDefaultCloseOperation( JFrame.EXIT_ON_CLOSE );

	    //JPanel layout
	    panel.setLayout(null);
	    
	    //JLabel layout
	    
	    
	    
	    // Positioning
	    //						x	y	width	height
	    PlayOthello.setBounds(175, 350, 150, 50);
	    Exit.setBounds(175, 400, 150, 50);
	    Othello.setBounds(95, 25, 500, 200);
	    //CoolBackground.setBounds(0, 0, x, y);
	    CoolBackground.setMaximumSize(getMaximumSize());
	   
	    
	    //Adding to JFrame
	    
	    CoolBackground.add(Othello);
	    CoolBackground.add(PlayOthello);
	    CoolBackground.add(Exit);
	    //panel.add(CoolBackground);
	    //this.add(panel);
	    this.add(CoolBackground);
	    
	    //setting Font
	    PlayOthello.setFont(ok);
	    Exit.setFont(ok);
	    Othello.setFont(Cool);
	   

	}
	
	public void paintComponent(Graphics g) {
		g.drawImage(img, 0, 0, getWidth(), getHeight(), this); // draw the image
		}
	


